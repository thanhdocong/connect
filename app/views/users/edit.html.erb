<!--set tilte to page-->
<% provide(:title, "Edit user") %>
<h1 class="account_info">Update your profile</h1>
<!--set some style to update form-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--create form for update user-->
    <%= form_for(@user) do |f| %>
    <!--load file at app/view/users/_fields/html/erb to use in form-->
     <%=render 'fields', f: f%>
      <!--add button update into update form-->
      <%= f.submit "Save changes", class: "btn btn-primary btn_commit" %>
    <% end %>
    <!--set image style-->
    <div class="gravatar_edit">
    <!--show image-->
      <%= gravatar_for @user %>
      <!--give link to update gravatar image cover-->
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>