<!--set title which pass from users controller-->
<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <!--show the image of the user -->
      <%= gravatar_for @user %>
      <!--show the name of the user -->
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <!--show the etriy user have-->
      <span><b>Entry:</b> <%= @user.entries.count %></span>
    </section>
    <section class="status">
    <!--load file in shared-->
      <%= render 'shared/status' %>
      <!--check if have any user-->
      <% if @users.any? %>
        <div class="user_avatars">
          <!--user loop to show each photo of follower or followed user-->
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
  <!--show the title  which pass from user control-->
    <h3><%= @title %></h3>
    <!--check if have any user-->
    <% if @users.any? %>
      <ul class="users">
        <!--load to open that page of the user-->
        <%= render @users %>
      </ul>
      <!--set view user in slide bar-->
      <%= will_paginate %>
    <% end %>
  </div>
</div>