<!--declare user variable with ini if it is empty-->
<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
    <!--show the user following count-->
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
    <!--show the user followers count-->
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>