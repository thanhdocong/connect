<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title..." %>
    <%= f.text_area :body, placeholder: "Say something..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary my_btn_post" %>
  <span class="picture">
    <!--add input file field to upload image with some extention-->
    <%#= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
  </span>
<% end %>
